<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cyder.atsushi.youtubesync">\

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="app.sync-pod.com"
                    android:scheme="http" />
                <data
                    android:host="app.com"
                    android:scheme="sync-pod" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateRoomActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TopActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RoomActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SearchVideoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".FirstStartActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SignInActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SignUpActivity"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="developer_key"
            android:value="${developer_key}" />
    </application>

</manifest>